<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_title"
        android:layout_alignParentEnd="true"
        android:text="Title"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:id="@+id/tx_artist"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Artist"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/tx_genre"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tx_artist"
        android:layout_below="@+id/tx_artist"
        android:gravity="center"
        android:text="Genre"
        android:textAppearance="?android:textAppearanceLarge" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:text="Listened"
        android:textAppearance="?android:textAppearanceMedium" />

    <ImageView
        android:id="@+id/tx_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_title"
        app:srcCompat="@drawable/album" />


</RelativeLayout>